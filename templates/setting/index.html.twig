{% extends 'base.html.twig' %}

{% block body %}
    <section class="my-5">
        <div class="container">
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-primary">Color primary</label>
                <input type="color" id="color-primary" name="color-primary" data-variable="--primary-color"
                       data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-secondary">Color secondary</label>
                <input type="color" id="color-secondary" name="color-secondary" data-variable="--secondary-color"
                       data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-tertiary">Color tertiary</label>
                <input type="color" id="color-tertiary" name="color-tertiary" data-variable="--tertiary-color"
                       data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-text-on-primary">Color text on primary</label>
                <input type="color" id="color-text-on-primary" name="color-text-on-primary"
                       data-variable="--text-on-primary" data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-text-on-secondary">Color text on secondary</label>
                <input type="color" id="color-text-on-secondary" name="color-text-on-secondary"
                       data-variable="--text-on-secondary" data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-text-on-tertiary">Color text on tertiary</label>
                <input type="color" id="color-text-on-tertiary" name="color-text-on-tertiary"
                       data-variable="--text-on-tertiary" data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-text-white">Color text white</label>
                <input type="color" id="color-text-white" name="color-text-white" data-variable="--text-white"
                       data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-text-black">Color text black</label>
                <input type="color" id="color-text-black" name="color-text-black" data-variable="--text-black"
                       data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="color-bg">Color bg</label>
                <input type="color" id="color-bg" name="color-bg" data-variable="--bg-color" data-action="setting">
            </div>
            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="font-size">Font size</label>
                <input class="input-lg"
                       type="range"
                       id="font-size"
                       name="font-size"
                       min="1"
                       max="2"
                       step="0.05"
                       value="1.2"
                       data-variable="--font-size-base"
                       data-action="setting">
                <span id="font-size-value" style="min-width: 1.5rem;"></span>
            </div>

            <div class="form-inline justify-content-between" style="width: 30rem">
                <label for="font-weight">Font weight</label>
                <input class="input-lg"
                       type="range"
                       id="font-weight"
                       name="font-weight"
                       min="100"
                       max="900"
                       step="100"
                       value="400"
                       data-variable="--font-weight-base"
                       data-action="setting">
                <span id="font-weight-value" style="min-width: 1.5rem;"></span>
            </div>
        </div>

        <button id="reset" class="button-primary extra-large">Reset all settings from this app</button>
    </section>
{% endblock %}
